<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet  id="create-dog_report-table.2"  author="Alex Elkin">

        <preConditions>
            <not>
                <tableExists  tableName = "dog_report"/>
            </not>
        </preConditions>

        <createTable  tableName="dog_report">
            <column  name="id"  type="INT"  autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="adoption"  type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column  name="date"  type="DATE">
                <constraints  nullable="false"/>
            </column>
            <column  name="photo"  type="OID">
                <constraints nullable="true"/>
            </column>
            <column  name="text"  type="VARCHAR(255)">
                <constraints  nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="dog_report" indexName="IDX-DOG-REPORT-DATE">
            <column name="date"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>